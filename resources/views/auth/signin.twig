{% extends 'templates/app.twig' %}

{% block content %}
	<div class='row'>
		<div class='col-md-6 offset-md-3'>
			<div class="card">
				<div class="card-header">
					Sign In
				</div>
				<div class="card-body">
					<form action='{{ path_for("auth.signin") }}' method='post' autocomplete='off'>
						<div class='form-group{{ errors.email ? " has-error" : "" }}'>
							<label for='email'>Email</label>
							<input type='email' name='email' id='email' placeholder='you@domain.com' class='form-control' value='{{ old.email }}'>
{% if errors.email %}
								<span class='help-block'>{{ errors.email | first }}</span>
{% endif %}
						</div>
						<div class='form-group{{ errors.password ? " has-error" : "" }}'>
							<label for='password'>Password</label>
							<input type='password' name='password' id='password' class='form-control'>
{% if errors.password %}
								<span class='help-block'>{{ errors.password | first }}</span>
{% endif %}
						</div>
						<div class='form-group form-check'>
							<input type='checkbox' class="form-check-input" name='remember' id='remember'>
							<label class="form-check-label" for='remember'>Remember Me</label>
						</div>
						<button type='submit' class='btn btn-default'>Sign In</button>

{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}