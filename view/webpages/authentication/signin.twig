{% extends 'templates/form_page.twig' %}

{% block mainPanel %}
								<div class="card">
									<div class="card-header">
										Sign In
									</div>
									<div class="card-body">
										<form action='{{ path_for("auth.signin") }}' method='post' autocomplete='off'>

											<div class='form-group{{ errors.identity ? " is-invalid" : "" }}'>
												<label class='form-label' for='identity'>Username or Email</label>
												<input type='text' name='identity' id='identity' placeholder='you@domain.com' class='form-control' value='{{ old.identity }}'>
{% if errors.identity %}
													<span class='help-block'>{{ errors.identity | first }}</span>
{% endif %}
											</div>

											<div class='form-group{{ errors.password ? " is-invalid" : "" }}'>
												<label class='form-label' for='password'>Password</label>
												<input type='password' name='password' id='password' class='form-control'>
{% if errors.password %}
													<span class='help-block'>{{ errors.password | first }}</span>
{% endif %}
											</div>

											<div class='form-group'>
												<a href="{{ path_for('auth.password.recovery') }}">Forgotten Password</a>
											</div>

											<div class='form-group form-check'>
												<input type='checkbox' class="form-check-input" name='remember' id='remember'>
												<label class='form-label' class="form-check-label" for='remember'>Remember Me</label>
											</div>

											<button type='submit' class='btn btn-default'>Sign In</button>

											{{ csrf.field | raw }}
										</form>
									</div>
								</div>
{% endblock %}